<%- include("header") -%>
<div class="card col-sm-9 col-md-7 col-lg-6 b br" id="trans">
  <h3 class="card-header" id="names">Transfer Money</h3>
  <div class="card-body">
    <form action="/complete" method="post">
      <div class="row">
        <div class="col">
          <label for="userfrom"><b>From :</b></label>
          <input type="text" name="from" id="userfrom" class="form-control" value= <%= sends %> readonly></input>
        </div>
        <div class="col">
          <label for="userto"><b>To :</b></label>
          <input type="text" name="to" id="userto" class="form-control" value= <%= recieves %> readonly></input>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col">
          <label for="amount"><b>Amount :</b></label>
          <input type="number" name="amount" class="form-control" placeholder="Amount" min="1">
        </div>
      </div><br>
      <button type="submit" class="btn btn-success btn-lg btn-block" name="submitbutton">Transfer</button>
    </form>
  </div>
</div>
<%- include("footer") -%>
